{
    "name": "react-gojs",
    "version": "1.4.1",
    "description": "GoJS React integration",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "node scripts/clean.js && tsc",
        "watch": "node scripts/clean.js && tsc -w",
        "test": "node scripts/test.js --env=jsdom",
        "coverage": "node scripts/test.js --env=jsdom --coverage",
        "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xcomponent/react-gojs.git"
    },
    "keywords": [
        "gojs",
        "react"
    ],
    "author": "XComponent <dev@xcomponent.com> (http://www.xcomponent.com)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/xcomponent/react-gojs/issues"
    },
    "homepage": "https://github.com/xcomponent/react-gojs#readme",
    "devDependencies": {
        "@types/enzyme": "^3.1.15",
        "@types/jest": "^23.3.11",
        "@types/node": "^10.12.18",
        "@types/react": "^16.7.18",
        "@types/react-dom": "^16.0.11",
        "coveralls": "^3.0.2",
        "enzyme": "^3.8.0",
        "enzyme-adapter-react-16": "^1.7.1",
        "husky": "^1.3.1",
        "jest": "^23.6.0",
        "jest-canvas-mock": "^1.1.0",
        "prettier": "1.15.3",
        "pretty-quick": "^1.8.0",
        "react": "16.x",
        "react-dom": "16.x",
        "ts-jest": "23.10.5",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.2"
    },
    "dependencies": {
        "gojs": "^1.8.35"
    },
    "peerDependencies": {
        "react": "16.x",
        "react-dom": "16.x"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setup.js",
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "testMatch": [
            "<rootDir>/src/**/?(*.)(test).ts?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "ts-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx",
            "mjs",
            "node",
            "ts",
            "tsx",
            "web.js",
            "web.jsx",
            "web.ts",
            "web.tsx"
        ],
        "preset": "ts-jest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
